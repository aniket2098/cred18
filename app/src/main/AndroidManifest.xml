<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pisb.credenz18">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.pisb.credenz18.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.pisb.credenz18.MainActivity"
            android:noHistory="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.pisb.credenz18.dummy" />
        <activity
            android:name="com.pisb.credenz18.AddReceipt"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pisb.credenz18.Prev"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pisb.credenz18.Details"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pisb.credenz18.Bug"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity android:name="com.pisb.credenz18.AddManually"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity android:name="com.pisb.credenz18.EventInfo"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity android:name="com.pisb.credenz18.ClashInfo"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity android:name="com.pisb.credenz18.Ping"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity android:name="com.pisb.credenz18.AboutUs"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity android:name="com.pisb.credenz18.ContactUs"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
    </application>

</manifest>